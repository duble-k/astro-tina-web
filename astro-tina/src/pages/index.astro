---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Import the content from the Markdown file
import Content from '../content/home/home.md';
import * as home from '../content/home/home.md';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-100">
		<Header title={SITE_TITLE} />
		<main class="container mx-auto p-4">
			<h1 class="text-4xl font-bold text-center text-gray-800 mb-6">{home.frontmatter.title}</h1>
			<p class="text-lg text-gray-700">
				{home.frontmatter.description}
			</p>
			<div class="mt-8 markdown-content">
				<Content />
			</div>
			<div class="mt-8">
				<p class="text-lg text-gray-700">
					Ready to dive in? Explore our posts, share your experiences, and become part of a growing community of dog enthusiasts!
				</p>
			</div>
		</main>
		<Footer />
	</body>
</html>
